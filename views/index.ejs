<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Paste Bin!</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <style>
      label {
        color: white;
      }
    </style>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="bg-black" style="display: flex; justify-content: center; align-items: center; height: 100vh; margin: 0">
    <div class="container border rounded p-md-2">
      <h1 style="color: white; font-size: 80px; text-align: center">Paste Bin!</h1>
      <hr style="color: white" />
      <form action="/" method="POST">
        <div>
          <div>
            <label for="pasteName">Paste name:</label>
            <input
              class="form-control"
              style="width: 200px; box-sizing: content-box"
              name="pasteName"
              id="pasteName"
              type="text"
              autocomplete="off"
              placeholder="Name your paste (Optional)"
            />
          </div>
          <br />
          <label>New Paste<span style="color: red">*</span>:</label>

          <div>
            <textarea
              class="form-control p-md-1"
              name="pasteContent"
              id="pasteContent"
              type="text"
              autocomplete="off"
              rows="10"
              required
              placeholder="Start typing here or paste something..."
            ></textarea>
          </div>
          <div>
            <label for="expiration">Expiration:</label>
            <select class="mt-3" autocomplete="off" id="expiration" name="expiration">
              <option value="X">never</option>
              <option value="-1">Burn after read</option>
              <option value="1">1 minute</option>
              <option value="5">5 minute</option>
              <option value="10">10 minute</option>
              <option value="30">30 minute</option>
              <option value="60">60 minute</option>
            </select>
          </div>
          <br />
          <div>
            <label for="passwdCheck">Password protected?</label>
            <input
              class="form-check-label"
              name="passwdCheck"
              id="passwdCheck"
              type="checkbox"
              value="off"
              autocomplete="off"
            />
          </div>
          <div id="passwordFieldDiv" style="display: none">
            <label class="m-2" for="passwdField">Password<span style="color: red">*</span>:ðŸ”’</label>
            <input type="password" name="passwdField" id="passwdField" />
          </div>
          <br />
          <div class="col d-flex justify-content-end">
            <button class="btn btn-lg btn-warning mx-3 my-3 mt-0" style="text-align: right" type="submit">
              Save paste!ðŸ’¾
            </button>
          </div>
        </div>
      </form>
    </div>
    <script>
      var passwdCheckBox = document.getElementById("passwdCheck");
      var passwdFieldDiv = document.getElementById("passwordFieldDiv");
      var passwdField = document.getElementById("passwdField");
      passwdCheckBox.addEventListener("change", () => {
        if (passwdCheckBox.checked) {
          passwdFieldDiv.style.display = "block";
          passwdField.setAttribute("required", "");
        } else {
          passwdFieldDiv.style.display = "none";
          passwdField.removeAttribute("required");
        }
      });
    </script>
  </body>
</html>
